pipeline {
    agent any

    stages {
	
	stage('Start MySQL') {
            steps {
                // Lancer MySQL avec Docker Compose
                sh 'docker compose up -d mysql'

                // Attendre que MySQL soit prêt
                sh '''
                echo "Waiting for MySQL to be ready..."
                MAX_RETRIES=30
                COUNT=0
                until docker exec jeux-mysql mysql -uroot -proot -e "SELECT 1;" >/dev/null 2>&1
                do
                    COUNT=$((COUNT+1))
                    if [ $COUNT -ge $MAX_RETRIES ]; then
                        echo "MySQL did not start in time!"
                        exit 1
                    fi
                    sleep 2
                done
                echo "MySQL is ready!"
                '''
            }
        }
	stage('Debug Networks') {
    steps {
        sh 'docker network ls'
    }
}
        stage('Maven package') {
            agent {
                docker {
                    image 'maven:3.9.11-eclipse-temurin-21'
                    args '''
                        -v $HOME/.m2:/root/.m2:z
                        -u root
                        --network projetJeux
                    '''
                    reuseNode true // Sans ça, il y aura un 2eme workspace
                }
            }

            steps {
                dir('projet_groupe4') {
                        withSonarQubeEnv('SonarQube') {
                            sh "mvn clean verify sonar:sonar -Dsonar.projectKey=projetJeux-boot  -Dsonar.projectName=projetJeux-boot"
                        
                    }
                }
            }
            
        }
	

        stage('Docker Build') {
            steps {
                dir('projet_groupe4') {
                    sh 'docker build -t ajc/projetjeux:boot .'
                }
            }
        }

        stage('Docker Deploy') {
            steps {
                
                sh 'docker compose up -d --build'
                
            }
        }
    }
}
