pipeline {
    agent any

    stages {
        stage('Maven package') {
            agent {
                docker {
                    image 'maven:3.9.11-eclipse-temurin-21'
                    args '''
                        -v $HOME/.m2:/root/.m2:z
                        -u root
                        --network projetJeux
                    '''
                    reuseNode true // Sans Ã§a, il y aura un 2eme workspace
                }
            }

            steps {
                dir('projet_groupe4') {
                    withSonarQubeEnv('SonarQube') {
                        sh "mvn clean verify sonar:sonar -Dsonar.projectKey=projetJeux-boot -Dsonar.projectName='projetJeux-boot'"
                    }
                }
            }
        }
	stage('Wait for MySQL') {
            steps {
                sh '''
                echo "Waiting for MySQL to be ready..."
                until docker exec jeux-mysql mysql -uroot -proot -e "SHOW DATABASES LIKE 'projetJeux';" | grep projetJeux; do
                    echo "MySQL not ready yet..."
                    sleep 2
                done
                echo "MySQL is ready!"
                '''
            }
        }

        stage('Docker Build') {
            steps {
                dir('projet_groupe4') {
                    sh 'docker build -t ajc/projetjeux:boot .'
                }
            }
        }

        stage('Docker Deploy') {
            steps {
                
                sh 'docker compose up -d --build'
                
            }
        }
    }
}
